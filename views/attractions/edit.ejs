    <% layout('layouts/boilerplate')%> 
    <div class="row">
        <h1 class="text-center">Edit Attraction</h1>
        <div class="col-6 offset-3">
            <form action="/attractions/<%= attraction._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="attraction[title]" value="<%= attraction.title %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="attraction[location]" value="<%= attraction.location %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="attraction[image]" value="<%= attraction.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control" aria-label="price" placeholder="0.000" id="price-label" name="attraction[price]" aria-describedby="price-label" value="<%= attraction.price %>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="attraction[description]"><%= attraction.description %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Attraction</button>
                </div>
            </form>
            <a href="/attractions/<%= attraction._id%>">Back To Attraction</a>
        </div>
    </div>